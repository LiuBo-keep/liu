<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--登录-->
    <servlet>
        <servlet-name>User</servlet-name>
        <servlet-class>com.hp.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>User</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <!--验证码-->
    <servlet>
        <servlet-name>VerifyCode</servlet-name>
        <servlet-class>com.hp.servlet.VerifyCodeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerifyCode</servlet-name>
        <url-pattern>/VerifyCode</url-pattern>
    </servlet-mapping>

    <!--普通用户注册-->
    <servlet>
        <servlet-name>putong</servlet-name>
        <servlet-class>com.hp.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>putong</servlet-name>
        <url-pattern>/putong</url-pattern>
    </servlet-mapping>

    <!--订单-->
    <servlet>
        <servlet-name>xiadan</servlet-name>
        <servlet-class>com.hp.servlet.DingdanServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>xiadan</servlet-name>
        <url-pattern>/xiadan</url-pattern>
    </servlet-mapping>

    <!--后台-->
    <servlet>
        <servlet-name>houtai</servlet-name>
        <servlet-class>com.hp.servlet.HouTaiServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>houtai</servlet-name>
        <url-pattern>/houtai</url-pattern>
    </servlet-mapping>
</web-app>